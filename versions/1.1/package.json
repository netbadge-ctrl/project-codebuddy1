{
  "name": "project-management-app",
  "version": "1.0.0",
  "description": "全栈项目管理应用",
  "main": "server/index.js",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "nodemon server/index.js",
    "client": "cd client && npm start",
    "build": "cd client && npm run build",
    "start": "node server/index.js",
    "seed": "node server/scripts/seed.js",
    "backup": "node scripts/backup-version.js",
    "restore": "node scripts/restore-version.js",
    "versions": "node scripts/restore-version.js list"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "pg": "^8.11.3",
    "dotenv": "^16.3.1",
    "node-cron": "^3.0.3",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "concurrently": "^8.2.2"
  }
}